version 16
__lua__
function intro()
 local i=0
 sfx(0)
 while(btn()==0)do
  cls()
  spr(0,52,40,2,2)
  spr(18,68,48)
  spr(32,54,57,3,2)
  if(i>10)spr(2,60,40)
  flip()
  i+=1
  if(i>90)break
 end
end
intro()

mode={}

function _init()
 mode=m_overworld
end

function _update()
 mode[1]()
end

function _draw()
 mode[2]()
end
-->8
px=0
py=0
ptilex=1
ptiley=1

function update_overworld()
 if px==ptilex*8 and py==ptiley*8 then
  if btn(0) then ptilex-=1
  elseif btn(1) then ptilex+=1
  elseif btn(2) then ptiley-=1
  elseif btn(3) then ptiley+=1
  end
 elseif px~=ptilex*8 then
  px+=sgn(ptilex*8-px)
 elseif py~=ptiley*8  then
  py+=sgn(ptiley*8-py)
 end
end

function draw_overworld()
 map(0,0,0,0,16,16)
 spr(3,px,py)
end

m_overworld={update_overworld,draw_overworld}

